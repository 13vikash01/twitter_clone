<%- include('../partials/header') %>

<div class="container" style="margin-top: 20px;">
    <header class="jumbotron">
        <div>
            <h1>See All the Posts</h1>
        </div>
    </header>



    <div class="container " style="margin-top: 20px;">
        <div class="row hidden-md-up" style="display: flex; flex-wrap: wrap;">
          
            <% posts.forEach(function(post){ %>

            <div class="col-md-3 col-sm-6">

                <div class="thumbnail">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;"><%= post.author %></h5>
                            <p class="card-text"> <%= post.text %> </p>
                            <%if(currentUser && post.author != currentUser.username){%>

                               <%if(currentUser.following.filter((user)=>user.name==post.author).length==0){%>
                                    <a class="card-link" href="/follow/<%=post.author%>">Follow</a>
                                  <%}else{%>
                                    <a class="card-link" href="/unfollow/<%=post.author%>">UnFollow</a>
                                  <%}%>

                                  <div>
                                    <form action="/post/<%= post._id %>/like" method="POST">
                                        <div class="btn-group">
                                            <% if (currentUser && post.likes.some(function (like) {
                                                return like.equals(currentUser._id)
                                            })) { %>
                                                <button class="btn btn-sm btn-primary">
                                                    <i class="fas fa-thumbs-up"></i> Liked (<%= post.likes.length %>)
                                                </button>
                                            <% } else { %>
                                                <button class="btn btn-sm btn-secondary">
                                                    <i class="fas fa-thumbs-up"></i> Like (<%= post.likes.length %>)
                                                </button>
                                            <% } %>
                                        </div>
                                    </form>
                                </div>
                                   <a href="#" class="card-link">Comment</a>
                            <%}%>
                        </div>
                    </div>
               </div>
            </div>
          <%})%>
        </div>
    </div>


<%- include('../partials/footer') %>