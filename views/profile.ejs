<%- include('partials/header'); -%>



<div class="container-fluid" style="background-color:whitesmoke; margin-top: 0%;">
    
    <div class="row">
        <div class="col-md-2">
            <h1>Followers</h1>
            <%user.followers.forEach((follower)=>
            {%>
                <!-- <img style="width: 40%;" src="<%=follower.image%>"> -->
                <a href="/myprofile/<%=follower.name%>"><%= follower.name%></a>
            <%})%>
        </div>






        <div class="col-md-8" style=" background-color: white; ;margin-top:2%;margin-left:0%;margin-right:0% ;">
          
            
                <div class="container-fluid" style="background-color:lightslategray;margin-top:1%;width:100%;height:50%;">
                   <div class="row">
                    <div class="col-md-4" >
                      <!-- <img style="width: 70%; margin-left:0%" class="rounded float-left" src="<%=user.image%>"> -->
                    </div>



                     <div class="col-md-6">
                       <div class="row">
                           <h1><%=user.username%></h1>
                       </div>
                       <div class="row">
                        <h3><i class="fa fa-envelope" aria-hidden="true"></i><%= user.email%></h3>
                        </div>
                        <!-- <div class="row">
                            <h3><i class="fa fa-location-arrow" aria-hidden="true"></i><%=user.address%></h3>
                         </div>
                        -->
                     </div>
                     </div>


                     <div class="row">
                         <div class="col-md-4">
                             <h2>FOLLOWERS</h2>
                             <h2><%=user.followers.length%></h2>
                         </div>
                         <div class="col-md-4">
                            <h2>FOLLOWING</h2>
                            <h2><%=user.following.length%></h2>
                         </div>
                         <div class="col-md-4">
                            <h2>POST</h2>
                            <h2><%=user.posts.length%></h2>
                         </div>
                     </div>
                </div>
            







               <div class="container" style="margin-top:1%">
                     
                <div class="row text-center flex-wrap">
        
                   <h1>My Posts</h1>
                   
                    <%posts.forEach((post)=>
                    {%>
                        <div class="row" style="margin-left:20%">
                       <div class="col-md-6 col-sm-6" >
                           <div class="thumbnail" >
                             
                            <a  style=" font-size: 2rem;margin-right:50%; color:black" href="/myprofile/<%=post.author.username%>"><%=post.author.username%></a>
                             
                             <!--<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>-->
                             <div class="caption" >
                             <p class="card-text"><%=post.text%></p>
                             
                           </div>
                           <!--<a href="#" class="comment-link">Comment-->
                           
                         <!--</a>-->
                         </div>
                       </div>
                    </div>
                    <%})%>
                
                 
                    
               </div>
               </div>












        </div>
        <div class="col-md-2">
            <h1>Following</h1>
            <%user.following.forEach((following)=>
            {%>
              <!-- <img src="<%=following.image%>"> -->
                <a href="/myprofile/<%=following.name%>"><%=following.name%></a>
            <%})%>
        </div>
    </div>
    
       

            
   
 </div>



 <%- include('partials/footer'); -%>